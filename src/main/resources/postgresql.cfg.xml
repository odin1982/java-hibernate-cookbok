<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
    
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/jhibernatecookbook</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">barcelona8</property>
		<property name="show_sql">true</property>
		<property name="hibernate.format_sql">true</property><!-- pretty format hibernate queries -->
		<!--Possible values: validate,update,create,create-drop -->
		<property name="hbm2ddl.auto">create-drop</property>
		<!-- List of XML ampping files -->
		<mapping resource="org/hibernate/model/Employee.hbm.xml"/>
		<mapping resource="org/hibernate/model/Department.hbm.xml"/>
	</session-factory>
</hibernate-configuration>